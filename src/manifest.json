{
  "manifest_version": 3,
  "name": "cookies.txt",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "version": "1.0.0",
  "description": "Exports all cookies to a Netscape HTTP cookie file, as used by curl, wget, youtube-dl, etc.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Export cookies",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "96": "icons/icon-96.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "popup/index.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "cookies"
  ]
}